{
    "name": "i dont feel so good",
    "description": "use primary key to become the true rat you are",
    "type": "origins:multiple",
    "toggle": {
        "condition": {
            "type": "origins:resource",
            "resource": "rat:ratpoisonbar",
            "comparison": ">=",
            "compare_to": 40
        },
        "type": "origins:toggle",
        "active_by_default": false,
        "key": {
            "key": "key.origins.primary_active"
        },
        "retain_state": false
    },
    "idontfeelsogood": {
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        },
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "effect give @e[distance=1..10] poison 5 1"
                },
                {
                    "type": "origins:execute_command",
                    "command": "effect give @e[distance=1..10] nausea 5 1"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "rat:ratpoisonbar",
                    "change": -40,
                    "operation": "add"
                }
            ]
        },
        "rising_action": {
            "type": "origins:execute_command",
            "command": "playsound minecraft:block.amethyst_block.hit player @s"
        }
    }
}